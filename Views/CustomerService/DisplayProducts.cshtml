@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nazwa Produktu</th>
            <th scope="col">Cena Produktu</th>
            <th scope="col">Opcje</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td class="tab">
                    <div class="col-6">
                        <a asp-controller="CustomerService" asp-action="AddToCart" asp-route-Id="@product.Id" class="btn btn-danger" role="button">Dodaj do koszyka</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
