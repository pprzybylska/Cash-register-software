@model IEnumerable<WebApplication2.Models.Bon>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista bonów
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Bon" asp-action="Create" class="btn btn-primary">Utwórz nowy bon</a>
        </div>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nazwa Produktu</th>
                    <th scope="col">Kwota Rabatu</th>
                    <th scope="col">Opcje</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.product.ProductPrice</td>
                        <td>@item.Value</td>
                        <td class="tab">
                            <div class="col-6">
                                <a asp-controller="Bon" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary me-1 text-start" role="button">Zaktualizuj</a>
                                <a asp-controller="Bon" asp-action="Delete" asp-route-Id="@item.Id" asp-for="Id" class="btn btn-danger" role="button">Usuń</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="Admin" class="btn btn-primary">Powrót</a>
        </div>






    </div>
</div>

