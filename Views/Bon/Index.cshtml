@model IEnumerable<WebApplication2.Models.Bon>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista bonów
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Bon" asp-action="Create" class="btn btn-primary">Utwórz nowy bon</a>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Produkt
                        </th>
                        <th>
                            Kwota
                        </th>
                        <th>
                            Zmiany
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td width="35%">@item.product.ProductName</td>
                            <td width="35%">@item.Value</td>
                            <td width="30%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Bon" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary mx-1">Edytuj</a>
                                    <a asp-controller="Bon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Usun</a>
                                </div>
                            </td>

                        </tr>


                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No items</p>
        }
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="Admin" class="btn btn-primary">Powrót</a>
        </div>






    </div>
</div>

