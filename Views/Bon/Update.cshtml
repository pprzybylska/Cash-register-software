@model WebApplication2.Models.Bon

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger">

        </div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Edytuj bon</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Value"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="product"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <select asp-for="ProductID" asp-items="@ViewBag.TypeDropDown" class="form-control">
                            <option selected>--Select Expense type --</option>
                        </select>
                        <span asp-validation-for="ProductID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Edytuj" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Cofnij</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

