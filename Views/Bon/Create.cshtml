@model WebApplication2.Models.ViewModel.BonVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger">

        </div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Dodaj bon</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="bon.Value"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="bon.product"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="bon.Value" class="form-control" />
                        <span asp-validation-for="bon.Value" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <select asp-for="bon.ProductID" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>--Select Expense type --</option>
                        </select>
                        <span asp-validation-for="bon.ProductID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col-6 text-center">
                            <input type="submit" class="btn btn-primary" value="Dodaj" />
                        </div>
                        <div class="col-6 text-center">
                            <a asp-action="Index" class="btn btn-success">Powrót</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

