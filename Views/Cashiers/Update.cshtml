@model WebApplication2.Models.ApplicationUser


@{
    ViewData["Title"] = "Update";
}


<form method="post" asp-action="UpdatePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="from-group row">
            <h2 class="text-black-50 text-center pl-3">Zmodyfikuj dane o kasjerze</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Surname"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Email"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Id" disabled class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>

                    </div>
                    <div class="col-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6 text-center">
                        <input type="submit" class="btn btn-primary" value="Zaktualizuj" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-75">Cofnij</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
