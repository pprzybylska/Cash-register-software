@model IEnumerable<WebApplication2.Models.ViewModel.CashierVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista kasjerów
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Dodaj kasjera lub admina</a>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Imię
                        </th>
                        <th>
                            Nazwisko
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Ilość transakcji
                        </th>
                        <th>
                            Zmiany
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td width="35%">@item.Id</td>
                            <td width="35%">@item.Name</td>
                            <td width="35%">@item.Surname</td>
                            <td width="35%">@item.Email</td>
                            <td width="35%">@item.Transactions</td>
                            <td width="30%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Cashiers" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary mx-1">Edytuj</a>
                                    <a asp-controller="Cashiers" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Usun</a>
                                    <a asp-controller="Cashiers" asp-action="ChangePassword" asp-route-id="@item.Id" class="btn btn-danger mx-1">Zmień hasło</a>
                                </div>
                            </td>

                        </tr>


                    }
                </tbody>
            </table>
        }
        else
        {
            <p> Brak kasjerów</p>
        }
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="Admin" class="btn btn-primary">Powrót</a>
        </div>





    </div>
</div>
