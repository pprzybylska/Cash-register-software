@model WebApplication2.Models.ViewModel.ChangePasswordVM


@{
    ViewData["Title"] = "Change Password";
}


<form method="post" asp-action="ChangePassword">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <p> @ViewBag.Message </p>
        <div class="from-group row">
            <h2 class="text-black-50 text-center pl-3">Zmodyfikuj dane o kasjerze</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Password"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Id" disabled class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6 text-center">
                        <input type="submit" class="btn btn-primary" value="Zaktualizuj" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success w-75">Cofnij</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}