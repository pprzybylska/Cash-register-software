@model IEnumerable<WebApplication2.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="w-100 text-center">
    <a class="btn btn-primary text-center my-2" asp-controller="Employee" asp-action="Create">Dodaj nowego pracownika</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Imię</th>
            <th scope="col">Nazwisko</th>
            <th scope="col">Login</th>
            <th scope="col">Opcje</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Login</td>
                <td class="tab">
                    <div class="col-6">
                        <a asp-controller="Employee" asp-action="Update" asp-route-Id="@employee.Id" class="btn btn-primary me-1" role="button">Zaktualizuj</a>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-Id="@employee.Id" class="btn btn-danger" role="button">Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-6 text-right">
    <a asp-controller="Home" asp-action="Admin" class="btn btn-primary">Powrót</a>
</div>
