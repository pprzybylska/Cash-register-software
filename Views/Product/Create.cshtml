@model WebApplication2.Models.Product

@{
    ViewData["Title"] = "Create";
}


<form method="post" asp-action="Create">
    <div class="border p-3 mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="from-group row">
            <h2 class="text-black-50 text-center pl-3">Dodaj nowy produkt</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="ProductPrice"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6 text-center">
                        <input type="submit" class="btn btn-primary" value="Dodaj produkt" />
                    </div>
                    <div class="col-6 text-center">
                        <input class="btn btn-success" asp-controller="Product" asp-action="Index" value="Powrót" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

