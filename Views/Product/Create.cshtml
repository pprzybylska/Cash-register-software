@model WebApplication2.Models.Product


@{
    ViewData["Title"] = "Create";
}


<form method="post" asp-action="Create">
    <div class="border p-3 mt-5">
        <div class="from-group row">
            <h2 class="text-black-50 text-center pl-3">Dodaj nowy produkt</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="ProductPrice"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ProductName" class="form-control"/>
                    </div>
                    <div class="col-6">
                        <input asp-for="ProductPrice" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6 text-center">
                        <input type="submit" class="w-50 rounded fs-3 py-3 px-3 btn d-block my-3" value="Create"/>
                    </div>
                    <div class="col-6 text-center">
                        <input class="w-50 rounded fs-3 py-3 px-3 btn d-block my-3" asp-controller="Product" asp-action="Index" value="Go back" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
