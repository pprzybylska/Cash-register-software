@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="w-100 text-center">
    <a class="btn btn-primary text-center my-2" asp-controller="Product" asp-action="Create">Dodaj nowy produkt</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nazwa Produktu</th>
            <th scope="col">Cena Produktu</th>
            <th scope="col">Opcje</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td class="tab">
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Update" asp-route-Id="@product.Id"  class="btn btn-primary me-1 text-start" role="button">Zaktualizuj</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" asp-for="Id" class="btn btn-danger" role="button">Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

