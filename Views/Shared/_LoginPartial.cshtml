@inject Microsoft.AspNetCore.Identity.SignInManager<WebApplication2.Models.ApplicationUser> SignInManager
@if (SignInManager.IsSignedIn(User))
{
<div class="nav w-100 justify-content-between">
    <a asp-area="" asp-controller="Home" asp-action="Index">
        <h2 class="text-start ms-5 title mt-3 pb-3 border-bottom mx-5">Cash Register Software</h2>
    </a>
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="navbar-nav">
            <li class="text-black nav-link me-5">Witaj @User.Identity.Name </li>
            <li><a class="text-black nav-link" href="javascript:document.getElementById('logoutForm').submit()">Wyloguj się</a> </li>
        </ul>
    </form>
</div>

}
else
{
<div class="nav w-100 justify-content-between">
    <a asp-area="" asp-controller="Home" asp-action="Index">
        <h2 class="text-start ms-5 title mt-3 pb-3 border-bottom mx-5">Cash Register Software</h2>
    </a>
    <ul class="navbar-nav">

        <li class="nav-item"><a class="nav-link text-black" id="registerLink" asp-controller="Account" asp-action="Login"> Zaloguj się</a></li>
        <li class="nav-item"><a class="nav-link text-black" id="registerLink" asp-controller="Account" asp-action="Register"> Zarejestruj się</a></li>
    </ul>
</div>

}
